@using StaloŽaidimųPortalas.Models.ViewModels

@model StaloŽaidimai.StaloŽaidimas

<div class="modal-header">
	<h5 class="modal-title" id="exampleModalLabel">Pridėti žaidimą</h5>
	<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
</div>
<div class="modal-body">
	@using (Html.BeginForm("PridėkŽaidimą", "StaloŽaidimai"))
	{
		@Html.ValidationSummary(true)
		<div class="modal-body">
			<div class="form-group">
				@Html.LabelFor(m => m.Pavadinimas)
				@Html.EditorFor(m => m.Pavadinimas, new { htmlAttributes = new { @class = "žaidimo-pavadinimas-input form-control" } })
				@Html.ValidationMessageFor(m => m.Pavadinimas, "", new { @class = "text-danger mb-2" })
			</div>
			<div class="form-group">
				@Html.LabelFor(m => m.Kategorija)
				@Html.EditorFor(m => m.Kategorija, new { htmlAttributes = new { @class = "žaidimo-kategorija-input form-control" } })
				@Html.ValidationMessageFor(m => m.Kategorija, "", new { @class = "text-danger mb-2" })
			</div>
			<div class="form-group">
				@Html.LabelFor(m => m.ŽaidėjųKiekisMin)
				@Html.EditorFor(m => m.ŽaidėjųKiekisMin, new { htmlAttributes = new { @class = "form-control" } })
				@Html.ValidationMessageFor(m => m.ŽaidėjųKiekisMin, "", new { @class = "text-danger mb-2" })
			</div>
			<div class="form-group">
				@Html.LabelFor(m => m.ŽaidėjųKiekisMax)
				@Html.EditorFor(m => m.ŽaidėjųKiekisMax, new { htmlAttributes = new { @class = "form-control" } })
				@Html.ValidationMessageFor(m => m.ŽaidėjųKiekisMax, "", new { @class = "text-danger mb-2" })
			</div>
		</div>
		<div class="modal-footer">
			<button type="submit" class="btn btn-primary pridėti-žaidimą">Pridėti</button>
			<button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Uždaryti</button>
		</div>
	}
</div>